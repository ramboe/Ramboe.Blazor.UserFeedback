@using System.Text.RegularExpressions
@using System.Web
<div class="alert alert-dark" style="max-width: @MaxWith; @marginbottom @margintop" role="alert">
    @((MarkupString) Regex.Replace(HttpUtility.HtmlEncode(Text), "\r?\n|\r", "<br />"))
</div>

@code {

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public string MaxWith { get; set; } = "100%";

    [Parameter]
    public string MarginBottom { get; set; }

    [Parameter]
    public string MarginTop { get; set; }

    string marginbottom = string.Empty;
    string margintop = string.Empty;


    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrEmpty(MarginBottom))
        {
            marginbottom = $"margin-bottom: {MarginBottom};";
        }
        if (!string.IsNullOrEmpty(MarginTop))
        {
            margintop = $"margin-top: {MarginTop};";
        }
    }

}
